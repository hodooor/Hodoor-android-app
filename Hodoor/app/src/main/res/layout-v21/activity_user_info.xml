<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9fdff"
    android:orientation="vertical"
    tools:context="com.example.marti.hodoor.Activities.activity_user_info">

    <RelativeLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="33dp"
        android:background="#f9fdff">

        <TextView
            android:id="@+id/userNameInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView"
            android:text="@string/user"
            android:textSize="32sp" />

        <TextView

            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:text="@string/hodin"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginEnd="7dp"
            android:text="@string/status"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/hours"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/textView"
            android:textSize="24sp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_below="@+id/frameLayout"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/inBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:onClick="btnSwipe"
                android:text="IN"
                android:textColor="#fff" />

            <Button
                android:id="@+id/breakBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top|center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:onClick="btnSwipe"
                android:text="break"
                android:textColor="#fff" />

            <Button
                android:id="@+id/tripBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top|center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:onClick="btnSwipe"
                android:text="trip "
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/outgoBtn"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top|center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:onClick="btnSwipe"
                android:text="out"
                android:textColor="#fff" />


            <Button
                android:id="@+id/ftbBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top|center_horizontal"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:onClick="btnSwipe"
                android:text="From break"
                android:textColor="#fff" />

            <Button
                android:id="@+id/ftrBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|top|center_horizontal"
                android:layout_weight="1"

                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:onClick="btnSwipe"
                android:text="from trip"
                android:textColor="#fff" />

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
